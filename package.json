{
  "name": "app-seguridad-informatica",
  "version": "1.0.0",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.juysam.appsegurity",
    "productName": "AppSegurity",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "extraMetadata": {
      "main": "src/main/main.js"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json",
      "styles.css",
      "index.html",
      "assets/**/*",
      "src/**/*"
    ],
    "win": {
      "icon": "build/logo.ico"
    }
  },
  "author": "JUYSAM",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "diskinfo": "^0.0.3",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.1",
    "zxcvbn": "^4.4.2"
  }
}
